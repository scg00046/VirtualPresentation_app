<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ui.about.AboutFragment">

    <TextView
        android:id="@+id/text_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/cardview_dark_background"
        android:text="Servicio de presentación virtual controlado desde terminal móvil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="40dp"
        android:text="Control remoto de presentación de diapositivas. Puede hacer lo siguiente:\n- Subir y eliminar presentación del servidor\n- Crear sesión \n- Escanear código QR de la sesión definida\n- Control de presentación" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:text="Grado en Ingeniería Telemática \nEscuela Politécnica Superior de Linares, Universidad de Jaén"
        android:textColor="@color/design_default_color_on_secondary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="20dp"
        android:layout_margin="10dp"
        android:gravity="bottom"
        android:textColor="@color/design_default_color_on_secondary"
        android:text="Autor: Sergio Caballero Garrido\nTutor: Juan Carlos Cuevas Martínez" />

</LinearLayout>