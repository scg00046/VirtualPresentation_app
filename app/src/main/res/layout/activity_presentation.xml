    <Button
        android:id="@+id/bt_finsesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_round"
        android:backgroundTint="#4CAF50"
        android:text="@string/present_btn_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt_zoommas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:background="@drawable/btn_round"
                android:drawableTop="@drawable/ic_zoom_in"
                android:text="@string/present_zoom_in" />

            <Space
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_column="1"/>
            <Space
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_column="2"/>

            <ImageButton
                android:id="@+id/bt_up"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_column="2"
                android:backgroundTint="@color/colorWhite"
                android:src="@drawable/ic_arrow_up"
                android:tint="@color/colorAccent" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Space
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_column="0"/>
            <Space
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_column="1"/>

            <ImageButton
                android:id="@+id/bt_left"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_column="2"
                android:backgroundTint="@color/colorWhite"
                android:src="@drawable/ic_arrow_left"
                android:text="Button"
                android:tint="@color/colorAccent" />

            <ImageButton
                android:id="@+id/bt_right"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_column="4"
                android:backgroundTint="@color/colorWhite"
                android:src="@drawable/ic_arrow_right"
                android:tint="@color/colorAccent" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt_zoommenos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:background="@drawable/btn_round"
                android:drawableBottom="@drawable/ic_zoom_out"
                android:text="@string/present_zoom_out" />

            <Space
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_column="1"/>

            <ImageButton
                android:id="@+id/bt_down"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_column="3"
                android:backgroundTint="@color/colorWhite"
                android:src="@drawable/ic_arrow_down"
                android:tint="@color/colorAccent" />
        </TableRow>

    </TableLayout>

